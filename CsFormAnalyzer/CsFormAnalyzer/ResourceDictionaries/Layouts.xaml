<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="Grid.Header" TargetType="Grid">
        <Setter Property="Background" Value="LightSkyBlue" />
    </Style>

    <Style x:Key="Grid.Body" TargetType="Grid">
        <Setter Property="Margin" Value="4" />
    </Style>

    <Style x:Key="Grid.Footer" TargetType="Grid">
        <Setter Property="Margin" Value="4" />
    </Style>

    <Style x:Key="Expander.Section" TargetType="Expander">        
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Style="{StaticResource H2}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>        
    </Style>
    
</ResourceDictionary>