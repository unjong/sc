<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="H1" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style x:Key="H2" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style x:Key="H3" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style x:Key="Title" TargetType="TextBlock" BasedOn="{StaticResource H1}">
        <Setter Property="Margin" Value="10,4" />
    </Style>

    <Style x:Key="Description" TargetType="TextBlock" BasedOn="{StaticResource H3}">
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>

</ResourceDictionary>